{
  "name": "rn-packages-monorepo",
  "version": "0.1.0",
  "private": false,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "pnpm -r run build",
    "clean": "find packages -type d \\( -name \"dist\" -o -name \"node_modules\" \\) -prune -exec rm -rf {} + 2>/dev/null || true",
    "pack": "pnpm -r run build && mkdir -p bin && for pkg in packages/*; do (cd \"$pkg\" && npm pack && mv *.tgz ../../bin/ 2>/dev/null || true); done",
    "lint": "echo \"TODO: add lint script\"",
    "test": "echo \"TODO: add test runner\""
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "typescript": "^5.4.0"
  }
}